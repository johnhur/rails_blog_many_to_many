<% if (@post.errors.any?) %>
	<% @post.errors.full_messages.each do |error| %>
	<p style="color:red;">
		<%= error %>
	</p>
	<% end %>
<% end %>


<%= form_for(@post, html:{class:"form-horizontal", role:"form"}) do |f| %>
	
	<div class="form-group">
		<%= f.label :title, class:"col-md-2"  %>
		<div class="col-sm-7">
			<%= f.text_field :title, class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :content, class:"col-md-2"  %>
		<div class="col-sm-7">
			<%= f.text_field :content, class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :author, class:"col-md-2"  %>
		<div class="col-sm-7">
			<%= f.text_field :author, class:"form-control" %>
		</div>
	</div>

	<div class="form-group">
	<%= f.label :tag_ids, class: "col-md-2" %>
	<div class="col-sm-7">
	    <%= f.collection_check_boxes(:tag_ids, @tags, :id, :name) do |b| %>
	        <span>
	            <%= b.check_box %>
	            <%= b.label %>
	        </span>
	    <% end %>
	  </div>
	</div>

	<div class="actions col-sm-offset-2">
		<%= f.submit class:"btn btn-primary" %>
		<%= link_to 'Cancel', posts_path, class:"btn btn-default" %>
	</div>
<% end %>